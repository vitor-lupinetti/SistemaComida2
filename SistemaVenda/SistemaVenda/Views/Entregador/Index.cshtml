@model IEnumerable<SistemaVenda.Models.EntregadorViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Cadastros de entregadores</h2>

<p>
    <a asp-action="Create">Cadastrar novo</a>
</p>



<table class=" table table-bordered">
    <thead>
        <tr>
            <th>Ações</th>
            <th scope="col">Nome</th>
            <th scope="col">Foto<th>
            <th scope="col">IdCidadeEntrega<th>
            <th scope="col">id<th>
        </tr>
    </thead>
	<tbody>
		
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a href="Entregador/Edit?id=@item.Id">Editar</a>
					<a href="javascript:apagar(@item.Id,'Entregador')">Apagar</a>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Foto)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IdCidadeEntrega)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				
			</tr>
		}
	</tbody>
</table>
